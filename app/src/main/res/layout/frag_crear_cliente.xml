<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_12mdp"
        app:cardCornerRadius="18dp"
        app:cardElevation="@dimen/_12mdp"
        app:cardBackgroundColor="@color/colorGris"
        >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12mdp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36mdp"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginTop="@dimen/_24mdp"
                android:layout_marginEnd="@dimen/_12mdp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <EditText
                    android:id="@+id/edt_nom_new_cli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusedByDefault="true"
                    android:layout_marginEnd="@dimen/_8mdp"
                    android:backgroundTint="@color/colorTransparente"
                    android:hint="Nombre"
                    android:drawableStart="@drawable/ic_persona"
                    android:drawablePadding="@dimen/_8mdp"
                    android:layout_marginStart="@dimen/_12mdp"
                    android:inputType="textCapWords"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_new_cli_cre" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView19"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36mdp"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_12mdp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                android:layout_marginTop="@dimen/_24mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView18">


                <EditText
                    android:id="@+id/edt_dir_new_cli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_direccion"
                    android:drawablePadding="@dimen/_8mdp"
                    android:layout_marginStart="@dimen/_12mdp"
                    android:layout_marginEnd="@dimen/_8mdp"
                    android:backgroundTint="@color/colorTransparente"
                    android:hint="Direccion"
                    android:inputType="textCapWords"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_new_cli_cre" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36mdp"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_12mdp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                android:layout_marginTop="@dimen/_24mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView21">


                <EditText
                    android:id="@+id/edt_ciu_new_cli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12mdp"
                    android:layout_marginEnd="@dimen/_8mdp"
                    android:backgroundTint="@color/colorTransparente"
                    android:drawableStart="@drawable/ic_ciudad"
                    android:drawablePadding="@dimen/_8mdp"
                    android:hint="Ciudad"
                    android:inputType="textCapWords"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_new_cli_cre" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView21"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36mdp"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_12mdp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                android:layout_marginTop="@dimen/_24mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView19">


                <EditText
                    android:id="@+id/edt_cel_new_cli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12mdp"
                    android:layout_marginEnd="@dimen/_8mdp"
                    android:backgroundTint="@color/colorTransparente"
                    android:drawableStart="@drawable/ic_celular"
                    android:drawablePadding="@dimen/_8mdp"
                    android:hint="Celular"
                    android:inputType="phone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_new_cli_cre" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView23"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36mdp"
                android:layout_marginStart="@dimen/_12mdp"
                android:layout_marginEnd="@dimen/_12mdp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                android:layout_marginTop="@dimen/_24mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView20">


                <EditText
                    android:id="@+id/edt_cor_new_cli"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_12mdp"
                    android:layout_marginEnd="@dimen/_8mdp"
                    android:backgroundTint="@color/colorTransparente"
                    android:drawableStart="@drawable/ic_correo"
                    android:drawablePadding="@dimen/_8mdp"
                    android:hint="Correo"

                    android:inputType="textEmailAddress"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_new_cli_cre" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/crv_btn_cre_new_cli"
                android:layout_width="@dimen/_150mdp"
                android:layout_height="@dimen/_35mdp"
                android:layout_marginTop="@dimen/_32mdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView23">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Crear Cliente"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlanco"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/crv_btn_atras_cre_cli"
                android:layout_width="@dimen/_110mdp"
                android:layout_height="@dimen/_32mdp"
                android:foregroundGravity="center"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="@dimen/_18mdp"
                android:layout_marginTop="@dimen/_28mdp"
                android:layout_marginStart="@dimen/_8mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/crv_btn_cre_new_cli">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Atras"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlanco"
                    android:textSize="17sp"
                     />

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>