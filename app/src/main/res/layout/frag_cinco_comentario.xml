<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_50mdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8mdp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="@dimen/_50mdp"
        >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12mdp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="@dimen/_4mdp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/edt_com_tik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8mdp"
                    android:layout_marginEnd="@dimen/_8mdp"
                    android:layout_marginBottom="@dimen/_8mdp"
                    android:backgroundTint="@color/colorTransparente"
                    android:hint="Comentario adicional del tecnico"
                    android:maxLength="400"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/crv_btn_tres_sig"
                android:layout_width="@dimen/_120mdp"
                android:layout_height="@dimen/_32mdp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/crv_btn_tres_atr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/crv_btn_tres_atr">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_1mdp"
                    android:gravity="center"
                    android:text="SIGUIENTE"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlanco"
                    android:textSize="16sp"  />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/crv_btn_tres_atr"
                android:layout_width="@dimen/_120mdp"
                android:layout_height="@dimen/_32mdp"
                android:layout_marginBottom="@dimen/_12mdp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                android:layout_marginTop="@dimen/_18mdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_1mdp"
                    android:gravity="center"
                    android:text="ATRAS"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlanco"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>