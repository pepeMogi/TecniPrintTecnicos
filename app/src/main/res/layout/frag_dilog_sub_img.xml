<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_tit_pros_diag_maq_img"
        android:layout_width="@dimen/_250mdp"
        android:layout_height="wrap_content"
        android:text="Subiendo Imagen espera unos segundos"
        android:textColor="@color/colorNegro"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_20mdp"
        android:layout_marginStart="@dimen/_16mdp"
        android:layout_marginEnd="@dimen/_16mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/prb_img_pros_diag_maq_img"
        android:layout_width="@dimen/_70mdp"
        android:layout_height="@dimen/_70mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:layout_marginBottom="@dimen/_20mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_tit_pros_diag_maq_img"
        app:layout_constraintStart_toStartOf="@+id/txt_tit_pros_diag_maq_img"
        app:layout_constraintTop_toBottomOf="@+id/txt_tit_pros_diag_maq_img" />


</androidx.constraintlayout.widget.ConstraintLayout>