<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pruebas.Pruebas">

    <Button
        android:id="@+id/btn_subir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Subir"
        app:layout_constraintBottom_toBottomOf="@+id/btn_img_escoger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_img_escoger" />


    <Button
        android:id="@+id/btn_img_escoger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="escoger imagen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_img_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Guardar en dispocitivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prb_prueba" />


    <Button
        android:id="@+id/btn_img_camino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escoger Camino"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_guardar" />


    <Button
        android:id="@+id/btn_img_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Txt"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_camino" />


    <Button
        android:id="@+id/btn_img_txt_offline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Offline"
        android:layout_marginTop="@dimen/_12mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_txt" />

    <Button
        android:id="@+id/btn_img_txt_subir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir Offline"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/_12mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_txt_offline" />


    <Button
        android:id="@+id/btn_img_txt_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Notificacion"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_prueba" />


    <TextView
        android:id="@+id/txt_prueba_offline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="subir online"
        android:layout_marginTop="@dimen/_12mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_txt_subir" />


    <TextView
        android:id="@+id/txt_prueba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="texto de prueba"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_img_escoger" />


    <ProgressBar
        android:id="@+id/prb_prueba"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_prueba" />

</androidx.constraintlayout.widget.ConstraintLayout>