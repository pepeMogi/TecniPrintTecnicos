<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_new_cli"
        android:layout_width="@dimen/_180mdp"
        android:layout_height="wrap_content"
        android:text="Creando Cliente"
        android:textColor="@color/colorNegro"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_20mdp"
        android:layout_marginStart="@dimen/_16mdp"
        android:layout_marginEnd="@dimen/_16mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/prb_new_cli"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        android:layout_marginTop="@dimen/_32mdp"
        android:layout_marginBottom="@dimen/_32mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_new_cli"
        app:layout_constraintStart_toStartOf="@+id/txt_new_cli"
        app:layout_constraintTop_toBottomOf="@+id/txt_new_cli" />


</androidx.constraintlayout.widget.ConstraintLayout>