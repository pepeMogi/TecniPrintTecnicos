<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_50mdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_8mdp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/colorGrisOscuro"
        android:layout_marginTop="@dimen/_50mdp"
        >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_12mdp"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/rcv_contadores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_marginBottom="@dimen/_62mdp"
                android:layout_marginTop="@dimen/_42mdp"
                app:layout_constraintBottom_toTopOf="@+id/crv_btn_tres_atr_mas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_14mdp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView22"
                        android:layout_width="@dimen/_80mdp"
                        android:layout_height="@dimen/_80mdp"
                        app:cardCornerRadius="46dp"
                        android:layout_marginTop="@dimen/_8mdp"
                        android:layout_marginBottom="@dimen/_8mdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/img_maq_cua"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txt_tipo_tres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12mdp"
                        android:text="Fotocopiadora"
                        android:textColor="@color/colorBlanco"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/cardView22"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/txt_id_tres"
                        android:layout_width="@dimen/_150mdp"
                        android:layout_height="wrap_content"
                        android:text="IdMaquina"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/_2mdp"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintStart_toStartOf="@+id/txt_tipo_tres"
                        app:layout_constraintTop_toBottomOf="@+id/txt_tipo_tres" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView27"
                        android:layout_width="@dimen/_46mdp"
                        android:layout_height="@dimen/_18mdp"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="@dimen/_8mdp"
                        app:layout_constraintStart_toStartOf="@+id/txt_tipo_tres"
                        app:layout_constraintTop_toBottomOf="@+id/txt_id_tres">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="@dimen/_10mdp"
                                android:layout_height="@dimen/_10mdp"
                                android:layout_marginStart="@dimen/_8mdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_cirnegro" />

                            <ImageView
                                android:id="@+id/imageView19"
                                android:layout_width="@dimen/_10mdp"
                                android:layout_height="@dimen/_10mdp"
                                android:layout_marginEnd="@dimen/_8mdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_criblanco" />




                        </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.cardview.widget.CardView>

                    <EditText
                        android:id="@+id/edt_con_btn_car"
                        android:layout_width="@dimen/_80mdp"
                        android:layout_height="@dimen/_30mdp"
                        android:layout_marginStart="@dimen/_8mdp"
                        android:backgroundTint="@color/colorTransparente"
                        android:hint="0000"
                        android:textColor="@color/colorBlanco"
                        android:textColorHint="@color/colorGris"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:textCursorDrawable="@null"
                        app:layout_constraintBottom_toBottomOf="@+id/cardView27"
                        app:layout_constraintStart_toEndOf="@+id/cardView27"
                        app:layout_constraintTop_toTopOf="@+id/cardView27"
                        app:layout_constraintVertical_bias="0.3" />


                    <EditText
                        android:id="@+id/edt_con_col_car"
                        android:layout_width="@dimen/_80mdp"
                        android:layout_height="@dimen/_30mdp"
                        android:backgroundTint="@color/colorTransparente"
                        android:hint="0000"
                        android:textColor="@color/colorBlanco"
                        android:textColorHint="@color/colorGris"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:textCursorDrawable="@null"
                        app:layout_constraintBottom_toBottomOf="@+id/cardView28"
                        app:layout_constraintStart_toStartOf="@+id/edt_con_btn_car"
                        app:layout_constraintTop_toTopOf="@+id/cardView28"
                        app:layout_constraintVertical_bias="0.3" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView28"
                        android:layout_width="@dimen/_46mdp"
                        android:layout_height="@dimen/_18mdp"
                        android:layout_marginTop="@dimen/_8mdp"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintStart_toStartOf="@+id/txt_tipo_tres"
                        app:layout_constraintTop_toBottomOf="@+id/cardView27">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="@dimen/_10mdp"
                                android:layout_height="@dimen/_10mdp"
                                android:layout_marginStart="@dimen/_4mdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_cirrojo" />

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="@dimen/_10mdp"
                                android:layout_height="@dimen/_10mdp"
                                android:layout_marginEnd="@dimen/_4mdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_cirazul" />

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="@dimen/_10mdp"
                                android:layout_height="@dimen/_10mdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/imageView11"
                                app:layout_constraintHorizontal_bias="0.481"
                                app:layout_constraintStart_toEndOf="@+id/imageView12"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_cirverde" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/crv_btn_tres_sig_mas"
                android:layout_width="@dimen/_120mdp"
                android:layout_height="@dimen/_32mdp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/crv_btn_tres_atr_mas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/crv_btn_tres_atr_mas">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:text="SIGUIENTE"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlanco"
                    android:textSize="16sp"  />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/crv_btn_tres_atr_mas"
                android:layout_width="@dimen/_120mdp"
                android:layout_height="@dimen/_32mdp"
                android:layout_marginBottom="@dimen/_12mdp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:text="ATRAS"
                    android:textColor="@color/colorBlanco"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>